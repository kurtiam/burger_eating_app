<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <img src="/public/assets/img/burger.png" alt="burger" class="burgerImg" />
            <h1 style="color:white"> Chomp A Burger </h1><br />
        </div>
    </div>

    <div class="row">
        <div class="col-xs-11 text-center enter_section ">
            <form action="/burgers/create" method="POST">
                <input type="text" class="enter" name="burger_name"
                    placeholder="Enter a burger name here. Add it. Then CHOMP IT!" value="">

                <button type="submit" class="btn btn-primary" id="text-enter-button">Add Burger</button>
            </form>
            <br>

        </div>
    </div>


    <div class="row">
        <div class="col-xs-6 text-left">
            <div class="row">
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class="col-sm-8 ">

                    <pre>{{this.id}}. {{this.burger_name}}  </pre>

                </div>
                <div class="col-xs-2 text-center move">
                    <form method="POST" action="/burgers/update" class="button-size">
                        <input type="hidden" type="text" name="burger_id" value={{this.id}}>
                        <button type="submit" class="btn btn-default">Chomp it!</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-xs-3 text-center" class="task">
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}">
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>